<div class="kuiSideBarSection">
  <div class="form-group">
    <div class="form-group">
      <label>Color Schema</label>
      <select class="form-control" ng-model="vis.params.colorSchema" ng-options="mode for mode in config.collections.colorSchemas"></select>
    </div>
    <div>
      <label>
        <input type="checkbox" value="{{hideLabel}}" ng-model="vis.params.reverseColor" name="reverseColor"
               ng-checked="vis.params.reverseColor">
        Show Label
      </label>
    </div>

    <div>
      <label>
        <input type="checkbox" value="{{hideLabel}}" ng-model="vis.params.showLabel" name="showLabel"
               ng-checked="vis.params.showLabel">
        Show Label
      </label>
    </div>
  </div>
</div>
